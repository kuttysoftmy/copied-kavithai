{% for post in postslist %}
<h2 class="is-title home-title">
<a href="{{ post.url }}" {% if entry.data.url == url %} aria-current="page"{% endif %}>
{% if post.title %}
{{ post.title }}
 {% else %}
{{ post.url }}
{% endif %}
</a>
</h2> 
<p class="subtitle post-date">
<time class="postList-date" datetime="{{ post.updated_date | date('DATE') }}">
{{ post.updated_date | date('HUMAN_DATE') }}
</time>
{% for tag in post.tags %}
{% set page = search.page("type=tag tag='" + tag + "'") %}
{% if page %}
<a href="{{ page.url  }}" class="tag is-danger">{{ tag }}</a>
{% endif %}
{% endfor %}
</p>
<hr>
{% endfor %}